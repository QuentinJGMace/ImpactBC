#:kivy 1.0.9
<Affiches>:
    anchor_x:"left"
    anchor_y : "top"
    size_hint_y : None
    height : 64


    BoxLayout:
        orientation:"vertical"
        rows : 1
        size_hint : [None, None]
        height : 64
        width : 800

        BoxLayout:
            orientation : "horizontal"
            size_hint_y : None
            height : 32
            Label:
                id: format_lbl
                size_hint : [None, None]
                height:30
                width : 200
                text : "Format de l'affiche (ou Flyer)"
            Menu_deroulant:
                id: format_input
                size_hint_x : None
                size_hint_y: None
                width : 100
                height:30

                choiceslist : ["A0", "A1", "A2", "A3", "A4", "A5", "Flyers"] 
            Label:
                id: nb_affiches_lbl
                size_hint : [None, None]
                height : 30
                width : 150
                text : "Nombre d'affiches"
            TextInput:
                id : nb_affiches_input
                size_hint : [None, None]
                height : 30
                width : 150
                text : "0"
            add_Affiches_Btn:
                text:"+"
                on_press : self.ajouter_ligne(root.parent)
            rm_Affiches_Btn:
                text : "-"
                on_press : self.rm_affiches(root.parent)
        AnchorLayout:
            anchor_x:"center"
            BoxLayout:
                orientation:"horizontal"
                size_hint_x : None
                width : 375
                Label :
                    id : papier_recycle_lbl
                    size_hint : [None, None]
                    height : 30
                    width : 300
                    text : "Papier recyclé (Oui / Non)"
                Menu_deroulant:
                    id : papier_recyler
                    size_hint : [None, None]
                    height : 30
                    width : 50
                    choiceslist : ["Oui", "Non"]

<Com>:
    GridLayout:
        rows : 3

        AnchorLayout:
            anchor_x:"center"
            anchor_y:"center"

            size_hint_y: None
            height: 75

            Label:
                id: com_titre
                text : "Communication"
        
        AnchorLayout:
            anchor_x:"center"
            anchor_y:"center"
            GridLayout:
                cols: 1

                AnchorLayout:
                    anchor_x:"left"
                    anchor_y : "center"
                    size_hint_y : None
                    height : 35

                    GridLayout:
                        rows : 1
                        size_hint : [None, None]
                        height : 35
                        width : 350
                        Label:
                            id:date_lbl
                            size_hint_x : None
                            size_hint_y: None
                            height:30
                            width: 150
                            text:"Date (jj/mm/aaaa)"
                        TextInput:
                            id: date_input
                            size_hint : [None, None]
                            height:30
                            width : 200

                AnchorLayout:
                    anchor_x : "left"
                    anchor_y : "top"
                    size_hint_y : None
                    height : 35

                    GridLayout :
                        rows : 1
                        size_hint: [None, None]
                        height : 35
                        width : 525
                        Label:
                            id:nb_mail_lbl
                            size_hint : [None, None]
                            height:30
                            width : 150
                            text : "Nombre de mails"
                        TextInput:
                            id: Nb_mail_input
                            size_hint_x : None
                            size_hint_y: None
                            width : 100
                            height:30
                            text : "0"
                        Label:
                            id: nb_pers_lbl
                            size_hint : [None, None]
                            width : 175
                            height : 30
                            text : "Nombre de personnes"
                        TextInput:
                            id: nb_pers
                            size_hint : [None, None]
                            width : 100
                            height : 30
                            text : "0"
                        Label:
                            id: piece_jointe_lbl
                            size_hint : [None, None]
                            width : 200
                            height : 30
                            text : "Pièce jointe (Oui/Non)"
                        Menu_deroulant:
                            id: piece_jointe
                            size_hint : [None, None]
                            width : 75
                            height : 30
                            choiceslist : ["Oui", "Non"]

                AnchorLayout:
                    anchor_x:"left"
                    anchor_y : "top"
                    size_hint_y : None
                    height : 35

                    GridLayout:
                        rows : 1
                        size_hint : [None, None]
                        height : 35
                        width : 250
                        Label:
                            id:nb_post_lbl
                            size_hint : [None, None]
                            height:30
                            width : 150
                            text : "Nombre de post"
                        TextInput:
                            id: Nb_post_input
                            size_hint_x : None
                            size_hint_y: None
                            width : 100
                            height:30
                            text : "0"
                
                AnchorLayout:
                    anchor_x:"left"
                    anchor_y:"top"
                    GridLayout:
                        cols : 1
                        Affiches :
                            id : aff
                    

        AnchorLayout:
            anchor_x:"right"
            anchor_y:"center"
            size_hint_y : None
            height : 50

            Button:
                id: add_transport_emi
                size_hint: [None, None]
                width : 150
                height : 30
                text:"Ajouter l'émission"
